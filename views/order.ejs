<%- include('header') %>
<h1>Order #<%= order.id %></h1>

<div class="list-item">
  <p><strong>User:</strong> <%= order.user_name || 'Guest' %></p>
  <p><strong>Status:</strong> <span class="status-badge"><%= order.status %></span></p>
  <p><strong>Total Amount:</strong> $<%= parseFloat(order.total_amount || 0).toFixed(2) %></p>
  <p><strong>Created:</strong> <%= new Date(order.created_at).toLocaleString() %></p>
</div>

<% if (items && items.length > 0) { %>
  <h2>Items</h2>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>SKU</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(function(item) { %>
        <% const subtotal = item.quantity * item.unit_price; %>
        <tr>
          <td><%= item.product_name || 'Unknown' %></td>
          <td><code><%= item.sku || '-' %></code></td>
          <td><%= item.quantity %></td>
          <td>$<%= parseFloat(item.unit_price || 0).toFixed(2) %></td>
          <td><strong>$<%= subtotal.toFixed(2) %></strong></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<div class="page-actions">
  <a href="/orders" class="btn btn-secondary">Back to Orders</a>
  <a href="/orders/<%= order.id %>/edit" class="btn">Edit Order</a>
  <form method="post" action="/orders/<%= order.id %>/delete" class="inline-form" data-admin-confirm="delete" onsubmit="return confirm('Delete this order?');">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
</div>

<%- include('footer') %>
