<%- include('header') %>
<h1>Stock Transaction</h1>

<div class="list-item">
  <p>
    <strong>Date:</strong> <%= new Date(transaction.created_at).toLocaleString() %>
  </p>
  <p>
    <strong>Product:</strong> <%= transaction.product_name || 'Deleted Product' %> (<code><%= transaction.sku || '-' %></code>)
  </p>
  <p><strong>Location:</strong> <%= transaction.location || '-' %></p>
  <p>
    <strong>Quantity Change:</strong>
    <strong class="<%= transaction.quantity_change > 0 ? 'qty-positive' : 'qty-negative' %>"><%= transaction.quantity_change > 0 ? '+' : '' %><%= transaction.quantity_change %></strong>
  </p>
  <p><strong>Reason:</strong> <%= transaction.reason || '-' %></p>
  <p><strong>User:</strong> <%= transaction.user_name || 'System' %></p>
</div>

<div class="page-actions">
  <a href="/stock-transactions" class="btn btn-secondary">Back to Stock Transactions</a>
  <form method="post" action="/stock-transactions/<%= transaction.id %>/delete" class="inline-form" data-admin-confirm="delete" onsubmit="return confirm('Delete this transaction?');">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
</div>

<%- include('footer') %>
