<%- include('header') %>
<h1>Categories</h1>

<a href="/categories/new" class="btn">+ New Category</a>

<% if (categories.length === 0) { %>
  <p class="alert alert-info">No categories yet. <a href="/categories/new">Create the first one</a></p>
<% } else { %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Parent Category</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(function(c) { %>
        <tr>
          <td><a href="/categories/<%= c.id %>"><%= c.name %></a></td>
          <td><%= c.parent_id ? 'Subcategory' : 'Main' %></td>
          <td>
            <a href="/categories/<%= c.id %>/edit" class="btn btn-secondary">Edit</a>
            <form method="post" action="/categories/<%= c.id %>/delete" class="inline-form" data-admin-confirm="delete" onsubmit="return confirm('Delete this category?');">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<%- include('footer') %>
